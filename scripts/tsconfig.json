
{
    "compilerOptions": {
        "target": "ES6",           
        "module": "commonjs",                 
        "lib": ["es6", "es2015", "dom"], 
        "declaration": true,     
        "outDir": "dist",         
        "rootDir": "src",       
        "strict": false,        
        "types": ["node"],
        "esModuleInterop": true,   
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
      },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
